<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

             <LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="20dp">

                 <Button
                     android:id="@+id/btn_shadow1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="call button"
                     android:drawableLeft="@drawable/call_bar_dial1_subordinate"
                     android:theme="@style/dialerbutton"
                     android:layout_marginBottom="20dp"
                     />
                 
                 
                   <Button
                     android:id="@+id/btn_shadow2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="call button"
                     android:drawableLeft="@drawable/call_bar_dial2_subordinate"
                     android:background="@drawable/dialpad_call_button_single"
                     android:layout_marginBottom="20dp"
                     />

    			

		       	<ImageButton
		            android:id="@+id/floating_action_button"
		            android:background="@drawable/floating_action_buttonex"
		            android:layout_width="56dp"
		            android:layout_height="56dp"
		            android:layout_margin="20dp"
		            android:src="@drawable/fab_ic_call"/>
    		


     </LinearLayout>
             


    </ScrollView>

</LinearLayout>